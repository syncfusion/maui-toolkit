<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Syncfusion.Maui.ControlsGallery.Calendar.Calendar.Month"
             xmlns:local="clr-namespace:Syncfusion.Maui.ControlsGallery.Calendar.Calendar"
             xmlns:calendar="clr-namespace:Syncfusion.Maui.Toolkit.Calendar;assembly=Syncfusion.Maui.Toolkit"
             xmlns:localCore="clr-namespace:Syncfusion.Maui.ControlsGallery;assembly=Syncfusion.Maui.ControlsGallery">
    <localCore:SampleView.Content>
        <Grid x:DataType="local:Month" WidthRequest="{OnPlatform Android=330, Default=350}" HeightRequest="{OnPlatform Android=370, Default=400}" Padding="0">
          <Border x:Name="border" Background="Transparent" Stroke="{Binding StrokeColor}" StrokeThickness="{OnPlatform iOS=2, MacCatalyst=2}" HorizontalOptions="Center" VerticalOptions="Center" Margin="0" Padding="2">
            <calendar:SfCalendar x:Name="month" Background="{Binding BGColor}" View="Month" TodayHighlightBrush="Transparent" CornerRadius="10" AllowViewNavigation="False" NavigationDirection="Horizontal"/>
          </Border>
    </Grid>
    </localCore:SampleView.Content>
</localCore:SampleView>