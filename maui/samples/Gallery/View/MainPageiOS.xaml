<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Syncfusion.Maui.ControlsGallery.MainPageiOS"
             xmlns:customView="clr-namespace:Syncfusion.Maui.ControlsGallery.CustomView"
             xmlns:converters="clr-namespace:Syncfusion.Maui.ControlsGallery.Converters"
             xmlns:sfTab="clr-namespace:Syncfusion.Maui.Toolkit.TabView;assembly=Syncfusion.Maui.Toolkit"
             xmlns:local="clr-namespace:Syncfusion.Maui.ControlsGallery.CustomView;assembly=Syncfusion.Maui.ControlsGallery"
             xmlns:base="clr-namespace:Syncfusion.Maui.ControlsGallery"
             MinimumWidthRequest="700"
             MinimumHeightRequest="400"
             BackgroundColor="{DynamicResource SecondaryColor}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <base:SampleBrowserStyles/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <converters:TagToPaddingConverter x:Key="TagToPaddingConverter"/>
    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    <converters:TextToInitialConverter x:Key="TextToInitialConverter"/>
  </ContentPage.Resources>

    <Grid>
        <Grid RowDefinitions="48,*"  Background="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">
        <Grid Grid.Row="1" VerticalOptions="Fill">
            <Grid x:Name="controlListPage" VerticalOptions="Fill" >
                <ScrollView HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Default" VerticalOptions="Fill">
                    <Grid x:Name="controlListGrid" ColumnSpacing="24" VerticalOptions="Fill" Margin="0,12,0,0">
                            <BoxView Color="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}" CornerRadius="20" VerticalOptions="Fill"/>
                        <VerticalStackLayout x:Name="columOneLayout" Margin="10,0,10,0">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="base:ControlCategoryModel">
                                    <VerticalStackLayout Spacing="12" Padding="0,12,0,0" >
                                        <Grid HeightRequest="40">
                                            <Grid HeightRequest="40">
                                                    <Border  Padding="16,8" HorizontalOptions="Start" Stroke="{AppThemeBinding Light={StaticResource TileHeaderBorderLight}, Dark={StaticResource TileHeaderBorderDark}}" StrokeThickness="1" >
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="20,20,20,0"/>
                                                    </Border.StrokeShape>
                                                        <Label FontFamily="Roboto-Medium" VerticalOptions="Center" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="{AppThemeBinding Light={StaticResource TileHeaderForegroundLight}, Dark={StaticResource TileHeaderForegroundDark}}" Text="{Binding Name}" FontSize="16" />
                                                </Border>
                                            </Grid>
                                                <BoxView Margin="22,0,0,0" HeightRequest="1.5"  Color="{AppThemeBinding Light={StaticResource TileHeaderBorderLight}, Dark={StaticResource TileHeaderBorderDark}}" VerticalOptions="End"/>
                                        </Grid>
                                        <Grid>
                                                <BoxView Color="{AppThemeBinding Light={StaticResource TileBackgroundLight}, Dark={StaticResource TileBackgroundDark}}" CornerRadius="20" HorizontalOptions="Fill" VerticalOptions="Fill"/>
                                            <VerticalStackLayout BindableLayout.ItemsSource="{Binding AllControls}" >
                                                <BindableLayout.ItemTemplate>
                                                    <DataTemplate x:DataType="base:ControlModel">
                                                        <customView:SfEffectsViewAdv TouchDownEffects="Ripple">
                                                                <customView:SfEffectsViewAdv.GestureRecognizers>
                                                                    <TapGestureRecognizer Tapped="Control_Tapped"/>
                                                                </customView:SfEffectsViewAdv.GestureRecognizers>
                                                                <Grid>
                                                                    <Grid Padding="16" ColumnSpacing="16" ColumnDefinitions="56,*,auto">
                                                                        <Image Source="{Binding Image}" HeightRequest="56" WidthRequest="56"/>
                                                                        <VerticalStackLayout   Grid.Column="1" HorizontalOptions="Fill" VerticalOptions="Center">
                                                                            <HorizontalStackLayout Spacing="5">
                                                                                    <Label FontFamily="Roboto-Medium" Text="{Binding Title}"  TextColor="{AppThemeBinding Light={StaticResource TileTextColourLight}, Dark={StaticResource TileTextColourDark}}" FontSize="16"/>
                                                                                <Label FontFamily="Roboto-Medium" Text="Preview" Padding="3,1" IsVisible="{Binding IsPreview}" BackgroundColor="Gold" TextColor="Black" FontSize="10" Margin="0,0,0,2" VerticalTextAlignment="Center"/>
                                                                            </HorizontalStackLayout>
                                                                            <Grid>
                                                                                <Label FontFamily="Roboto-Regular" 
                                                                                       VerticalOptions="Center"
                                                                                       Text="{Binding Description}"
                                                                                       TextColor="{AppThemeBinding Light={StaticResource TileTextColourAlt1Light}, Dark={StaticResource TileTextColourAlt1Dark}}" 
                                                                                       FontSize="14"
                                                                                       MaxLines="3" 
                                                                                       LineBreakMode="WordWrap"/>
                                                                            </Grid>
                                                                        </VerticalStackLayout>
                                  
                                           <Border Grid.Column="2" IsVisible="{Binding StatusTag, Converter={StaticResource StringToVisibilityConverter}}"
                                                   Background="{AppThemeBinding Light={StaticResource BadgeColour1Light}, Dark={StaticResource BadgeColour1Dark}}"
                                                   Padding="2,2,2,3"
                                                   Margin="0" 
                                                   x:Name="StatusTagBorder"
                                                   HorizontalOptions="End"
                                                   VerticalOptions="Center">
                                        <Border.StrokeShape>
                                          <RoundRectangle CornerRadius="8" />
                                        </Border.StrokeShape>
                                        <Label TextColor="{AppThemeBinding Light={StaticResource BadgeTextColourLight}, Dark={StaticResource BadgeTextColourDark}}"
                                               Padding="6,0,6,0"
                                               Text="{Binding StatusTag}"
                                               FontSize="10"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               FontFamily="Roboto-Regular"
                                               VerticalTextAlignment="Start"/>
                                      </Border>  
                                  </Grid>
                                                                        <BoxView Grid.Row="1" VerticalOptions="End" HeightRequest="2" Color="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"/>
                                                                </Grid>
                                                        </customView:SfEffectsViewAdv>
                                                    </DataTemplate>
                                                </BindableLayout.ItemTemplate>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </VerticalStackLayout>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </Grid>
                </ScrollView>
            </Grid>              
                <Grid x:Name="sortOptionGrid" BackgroundColor="{AppThemeBinding Light={StaticResource SidebarBackgroundLight}, Dark={StaticResource SidebarBackgroundDark}}" IsVisible="False" VerticalOptions="End" HorizontalOptions="FillAndExpand" HeightRequest="550" RowDefinitions="56,*,2,*,80" >
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="SortOptionGridTapped"/>
                </Grid.GestureRecognizers>
                    <BoxView CornerRadius="20,20,0,0" Color="{AppThemeBinding Light={StaticResource SidebarBackgroundLight}, Dark={StaticResource SidebarBackgroundDark}}" HeightRequest="550" Grid.RowSpan="5"/>
                    <Grid ColumnDefinitions="*,Auto" Margin="24,0,15,0" >
                        <Label Text="Sort And Filter" Grid.Column="0" FontSize="16" FontFamily="Roboto-Medium" FontAttributes="Bold" VerticalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource TextColourLight}, Dark={StaticResource TextColourDark}}"/>
                        <Border WidthRequest="35" HeightRequest="35" Grid.Row="1" VerticalOptions="Center" HorizontalOptions="End" StrokeThickness="0" BackgroundColor="Transparent">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="30"/>
                            </Border.StrokeShape>
                            <customView:SfEffectsViewAdv>
                                <customView:SfEffectsViewAdv.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Cancel_Clicked"/>
                                </customView:SfEffectsViewAdv.GestureRecognizers>
                                <Label Text="&#xe755;" Style="{StaticResource IconStyle}" FontFamily="MauiSampleFontIcon" Grid.Row="1" FontSize="24" VerticalOptions="Center" HorizontalOptions="Center"/>
                            </customView:SfEffectsViewAdv>
                        </Border>
                      
                    </Grid>

                <VerticalStackLayout Grid.Row="1" Spacing="15" Margin="18,10,0,0" RadioButtonGroup.GroupName="sort">
                        <Label Text="Sort" FontSize="14" FontAttributes="Bold" FontFamily="Roboto-Medium" Grid.Row="1" Margin="6,0,0,0" TextColor="{AppThemeBinding Light={StaticResource SidebaritemTextColourLight}, Dark={StaticResource SidebaritemTextColourDark}}"/>
                    <Grid ColumnDefinitions="*,30" Margin="6,3,20,0">
                            <Label Text="None" FontSize="14" FontFamily="Roboto" TextColor="{AppThemeBinding Light={StaticResource SidebaritemTextColourLight}, Dark={StaticResource SidebaritemTextColourDark}}"/>
                            <RadioButton x:Name="noneOption" IsChecked="True" Grid.Column="1" Style="{StaticResource radioButtonStyle}"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,30" Margin="6,0,20,0">
                            <Label Text="Alphabetical ascending" FontSize="14" FontFamily="Roboto" TextColor="{AppThemeBinding Light={StaticResource SidebaritemTextColourLight}, Dark={StaticResource SidebaritemTextColourDark}}"/>
                            <RadioButton x:Name="ascending" Grid.Column="1" Style="{StaticResource radioButtonStyle}"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,30" Margin="6,0,20,0">
                            <Label Text="Alphabetical descending" FontSize="14" FontFamily="Roboto" TextColor="{AppThemeBinding Light={StaticResource SidebaritemTextColourLight}, Dark={StaticResource SidebaritemTextColourDark}}"/>
                            <RadioButton x:Name="descending" Grid.Column="1" Style="{StaticResource radioButtonStyle}"/>
                    </Grid>
                </VerticalStackLayout>
                    <BoxView Color="{AppThemeBinding Light={StaticResource TileHeaderBorderLight}, Dark={StaticResource TileHeaderBorderDark}}" HeightRequest="1" Grid.Row="2" Margin="0,-40,0,0"/>
                <VerticalStackLayout Grid.Row="3" Margin="18,-10,0,0" Spacing="20">
                        <Label Margin="6,0,0,0" Text="Filter" TextColor="{AppThemeBinding Light={StaticResource SidebaritemTextColourLight}, Dark={StaticResource SidebaritemTextColourDark}}" FontAttributes="Bold" FontFamily="Roboto-Medium"/>
                    <Grid ColumnDefinitions="*,30" Margin="6,0,20,0">
                            <Label Text="All Samples" VerticalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource SidebaritemTextColourLight}, Dark={StaticResource SidebaritemTextColourDark}}"/>
                            <CheckBox x:Name="allSamples" Grid.Column="1" IsChecked="True" CheckedChanged="AllSamplesCheckBoxChanged"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,30" Margin="6,0,20,0">
                            <Label Text="New Samples" VerticalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource SidebaritemTextColourLight}, Dark={StaticResource SidebaritemTextColourDark}}"/>
                            <CheckBox x:Name="newSamples" Grid.Column="1" IsChecked="True" CheckedChanged="NewSamplesCheckBoxChanged"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,30" Margin="6,0,20,0">
                            <Label Text="Updated Samples" VerticalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource SidebaritemTextColourLight}, Dark={StaticResource SidebaritemTextColourDark}}"/>
                            <CheckBox x:Name="updatedSamples" Grid.Column="1" IsChecked="True" CheckedChanged="UpdatedSamplesCheckBoxChanged"/>
                    </Grid>
                </VerticalStackLayout>
                <Grid Grid.Row="4" VerticalOptions="Center">
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" VerticalOptions="Center">
                        <Button Text="Cancel" Clicked="Cancel_Clicked" Style="{StaticResource CloseButtonStyle}" CornerRadius="20" HeightRequest="40" WidthRequest="150" />
                        <Button Text="Apply" CornerRadius="20" Clicked="SortOptionApplyButtonClicked" HeightRequest="40" WidthRequest="150" />
                    </HorizontalStackLayout>
                </Grid>
            </Grid>
                <Grid x:Name="searchListGrid" IsVisible="False" Background="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}" IsClippedToBounds="True" >
                <Grid x:Name="searchedSampleView" ColumnDefinitions="*,50,Auto,Auto,Auto,Auto,Auto" IsVisible="False" RowDefinitions="48,*" >
                        <Grid Grid.ColumnSpan="7" BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"/>
                    <Label x:Name="searchedSampleTitle"
                           Margin="16,0"
                           VerticalOptions="Center"
                           VerticalTextAlignment="Center"
                           HorizontalOptions="Start"
                           HorizontalTextAlignment="Start"
                           FontSize="16"/>

                        <Border x:Name="searchedSampleWhatsNewImage" Grid.Column="2" HorizontalOptions="End" IsVisible="False" WidthRequest="40" HeightRequest="40" BackgroundColor="Transparent" Padding="-1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="30"/>
                            </Border.StrokeShape>
                            <customView:SfEffectsViewAdv>
                                <customView:SfEffectsViewAdv.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="WhatsNewTappedSearchedSample"/>
                                </customView:SfEffectsViewAdv.GestureRecognizers>
                                <Label Text="&#xe719;" Style="{StaticResource IconStyle}" FontFamily="MauiSampleFontIcon" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                            </customView:SfEffectsViewAdv>
                        </Border>

                        <Border x:Name="searchedSampleSourceLinkImage" Grid.Column="3" HorizontalOptions="End" IsVisible="false" WidthRequest="40" HeightRequest="40" BackgroundColor="Transparent" Padding="-1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="30"/>
                            </Border.StrokeShape>
                            <customView:SfEffectsViewAdv>
                                <customView:SfEffectsViewAdv.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="SourceLinkTapped" />
                                </customView:SfEffectsViewAdv.GestureRecognizers>
                                <Label Text="&#xe7ba;" Style="{StaticResource IconStyle}" FontFamily="MauiSampleFontIcon" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                            </customView:SfEffectsViewAdv>
                        </Border>

                        <Border x:Name="searchedSampleYoutubeImage" Grid.Column="4" BackgroundColor="Transparent" HorizontalOptions="End" IsVisible="false" WidthRequest="40" HeightRequest="40" Padding="-1"> 
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="30"/>
                            </Border.StrokeShape>
                            <customView:SfEffectsViewAdv>
                                <customView:SfEffectsViewAdv.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="YoutubeIconTapped" />
                                </customView:SfEffectsViewAdv.GestureRecognizers>
                                <Label Text="&#xe79e;" Style="{StaticResource IconStyle}" FontFamily="MauiSampleFontIcon" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center" />
                            </customView:SfEffectsViewAdv>
                        </Border>

                        <Border x:Name="searchedSampleViewerImage" HorizontalOptions="Fill" Grid.Column="5" IsVisible="false" WidthRequest="40" HeightRequest="40" BackgroundColor="Transparent" Padding="-1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="30"/>
                            </Border.StrokeShape>
                            <customView:SfEffectsViewAdv>
                                <customView:SfEffectsViewAdv.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="CodeViewerTapped" />
                                </customView:SfEffectsViewAdv.GestureRecognizers>
                                <Label Text="&#xe7bb;" Style="{StaticResource IconStyle}" FontFamily="MauiSampleFontIcon" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                            </customView:SfEffectsViewAdv>
                        </Border>

                       <Border x:Name="searchedSampleSettingsImage" WidthRequest="40" HeightRequest="40" Background="Transparent" Margin="0,15,8,0" Grid.Column="6" VerticalOptions="Center" HorizontalOptions="End" StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="30"/>
                            </Border.StrokeShape>
                            <customView:SfEffectsViewAdv>
                                <customView:SfEffectsViewAdv.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="PropertiesTabPressed" />
                                </customView:SfEffectsViewAdv.GestureRecognizers>
                                <Label Text="&#xe73b;" Style="{StaticResource IconStyle}" FontFamily="MauiSampleFontIcon" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
                            </customView:SfEffectsViewAdv>
                        </Border>
                        <Grid x:Name="searchedSampleGrid" Background="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}" Grid.Row="1" Grid.ColumnSpan="7"/>
                </Grid>
                    <Grid x:Name="searchedSampleScrollViewer" BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">
                    <ScrollView Orientation="Vertical" VerticalScrollBarVisibility="Always" VerticalOptions="Fill" >
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding SearchList}"
                                             x:DataType="base:SamplesViewModel"
                                             x:Name="searchedResultList" 
                                             HorizontalOptions="Fill"
                                             Background="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
                                             Padding="10">
                            <BindableLayout.ItemTemplate >
                                <DataTemplate x:DataType="base:SearchModel">
                                        <customView:SfEffectsViewAdv TouchDownEffects="Ripple" >
                                        <customView:SfEffectsViewAdv.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                                        </customView:SfEffectsViewAdv.GestureRecognizers>
                                        <HorizontalStackLayout Padding="10" Spacing="10">
                                                <Label Grid.Row="0" Text="{Binding Control.Title}" FontAttributes="Bold" TextColor="{AppThemeBinding Light={StaticResource TileTextColourLight}, Dark={StaticResource TileTextColourDark}}" FontSize="16" FontFamily="Roboto-Medium"  />
                                                <Label Grid.Row="0" Text="-" TextColor="{AppThemeBinding Light={StaticResource TileTextColourLight}, Dark={StaticResource TileTextColourDark}}" FontSize="20" FontFamily="Roboto-Regular"/>
                                                <Label Grid.Row="0" Text="{Binding Sample.Title}" TextColor="{AppThemeBinding Light={StaticResource TileTextColourAlt1Light}, Dark={StaticResource TileTextColourAlt1Dark}}" FontSize="16" FontFamily="Roboto-Regular"/>
                                        </HorizontalStackLayout>
                                    </customView:SfEffectsViewAdv>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Grid>
            <Grid x:Name="sortAndFilteredGrid" VerticalOptions="Fill" IsVisible="False"  RowDefinitions="20,*">
                <BoxView HeightRequest="20" Color="Transparent"/>
                <ScrollView Grid.Row="1" HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Default" VerticalOptions="Fill">
                    <VerticalStackLayout>
                            <Grid  x:Name="filteredGridNew" ColumnSpacing="24" VerticalOptions="Fill"  Padding="5" BackgroundColor="{AppThemeBinding Light={StaticResource TileBackgroundLight}, Dark={StaticResource TileBackgroundDark}}">
                                <BoxView Color="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}" CornerRadius="20" VerticalOptions="Fill"/>
                            <VerticalStackLayout Spacing="12" Padding="0,12,0,0" BackgroundColor="Transparent">
                                <Grid HeightRequest="40">
                                    <Grid HeightRequest="40">
                                            <Border Background="{AppThemeBinding Light={StaticResource TileHeaderBackgroundLight}, Dark={StaticResource TileHeaderBackgroundDark}}" Padding="16,8" HorizontalOptions="Start" Stroke="#B3BEC4" StrokeThickness="1">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="20,20,20,0"/>
                                            </Border.StrokeShape>
                                                <Label Text="New Samples" FontFamily="Roboto-Medium" VerticalOptions="Center" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="{AppThemeBinding Light={StaticResource TileHeaderForegroundLight}, Dark={StaticResource TileHeaderForegroundDark}}"  FontSize="16" />
                                        </Border>
                                    </Grid>
                                        <BoxView Margin="22,0,0,1" HeightRequest="1" Color="{AppThemeBinding Light={StaticResource TileHeaderBorderLight}, Dark={StaticResource TileHeaderBorderDark}}" VerticalOptions="End"/>
                                </Grid>
                                <Grid BackgroundColor="Transparent">
                                        <BoxView  Color="{AppThemeBinding Light={StaticResource TileBackgroundLight}, Dark={StaticResource TileBackgroundDark}}" CornerRadius="20" HorizontalOptions="Fill" VerticalOptions="Fill"/>
                                    <VerticalStackLayout x:DataType="base:SamplesViewModel" BindableLayout.ItemsSource="{Binding SortedListNew}">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate x:DataType="base:SearchModel">
                                                <customView:SfEffectsViewAdv TouchDownEffects="Ripple">
                                                    <customView:SfEffectsViewAdv.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="SortSampleTapGestureTapped"/>
                                                    </customView:SfEffectsViewAdv.GestureRecognizers>
                                                    <VerticalStackLayout>
                                                        <HorizontalStackLayout Padding="10" Spacing="10">
                                                                <Label x:DataType="base:SearchModel" Text="{Binding Control.Title}" TextColor="{AppThemeBinding Light={StaticResource TileTextColourLight}, Dark={StaticResource TileTextColourDark}}"  FontSize="16" FontFamily="Roboto-Medium"  />
                                                                <Label Text="-" TextColor="{AppThemeBinding Light={StaticResource TileTextColourLight}, Dark={StaticResource TileTextColourDark}}"  FontSize="16" FontFamily="Roboto-Medium" />
                                                                <Label x:DataType="base:SearchModel" Text="{Binding Sample.Title}" TextColor="{AppThemeBinding Light={StaticResource TileTextColourAlt1Light}, Dark={StaticResource TileTextColourAlt1Dark}}"  FontSize="16" FontFamily="Roboto-Regular"/>
                                                        </HorizontalStackLayout>
                                                            <BoxView Color="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}" HeightRequest="2"/>
                                                    </VerticalStackLayout>
                                                </customView:SfEffectsViewAdv>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </VerticalStackLayout>
                                </Grid>
                            </VerticalStackLayout>
                        </Grid>
                            <Grid  x:Name="filteredGridUpdated" ColumnSpacing="24" VerticalOptions="Fill" Padding="5" BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">
                                <BoxView Color="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}" CornerRadius="20" VerticalOptions="Fill"/>
                            <VerticalStackLayout Spacing="12" Padding="0,12,0,0" BackgroundColor="Transparent">
                                <Grid HeightRequest="40">
                                    <Grid HeightRequest="40">
                                            <Border Background="{AppThemeBinding Light={StaticResource TileHeaderBackgroundLight}, Dark={StaticResource TileHeaderBackgroundDark}}" Padding="16,8" HorizontalOptions="Start" Stroke="{AppThemeBinding Light={StaticResource TileHeaderBorderLight}, Dark={StaticResource TileHeaderBorderDark}}" StrokeThickness="1">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="20,20,20,0"/>
                                            </Border.StrokeShape>
                                                <Label Text="Updated Samples" FontFamily="Roboto-Medium" VerticalOptions="Center" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="{AppThemeBinding Light={StaticResource TileHeaderForegroundLight}, Dark={StaticResource TileHeaderForegroundDark}}" FontSize="16" />
                                        </Border>
                                    </Grid>
                                        <BoxView Margin="22,0,0,1" HeightRequest="1" Color="{AppThemeBinding Light={StaticResource TileHeaderBorderLight}, Dark={StaticResource TileHeaderBorderDark}}" VerticalOptions="End"/>
                                </Grid>
                                <Grid BackgroundColor="Transparent">
                                        <BoxView  Color="{AppThemeBinding Light={StaticResource TileBackgroundLight}, Dark={StaticResource TileBackgroundDark}}" CornerRadius="20" HorizontalOptions="Fill" VerticalOptions="Fill"/>
                                    <VerticalStackLayout x:DataType="base:SamplesViewModel" BindableLayout.ItemsSource="{Binding SortedListUpdated}">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate x:DataType="base:SearchModel">
                                                <customView:SfEffectsViewAdv TouchDownEffects="Ripple">
                                                    <customView:SfEffectsViewAdv.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="SortSampleTapGestureTapped"/>
                                                    </customView:SfEffectsViewAdv.GestureRecognizers>
                                                    <VerticalStackLayout>
                                                        <HorizontalStackLayout Padding="10" Spacing="10">
                                                                <Label Text="{Binding Control.Title}" TextColor="{AppThemeBinding Light={StaticResource TileTextColourLight}, Dark={StaticResource TileTextColourDark}}" FontSize="16" FontFamily="Roboto-Medium"  />
                                                                <Label Text="-" TextColor="{AppThemeBinding Light={StaticResource TileTextColourLight}, Dark={StaticResource TileTextColourDark}}" FontSize="16" FontFamily="Roboto-Medium"  />
                                                            <Label Text="{Binding Sample.Title}" TextColor="{AppThemeBinding Light={StaticResource DescriptionTextColorLight}, Dark={StaticResource DescriptionTextColorDark}}" FontSize="16" FontFamily="Roboto-Regular"/>
                                                        </HorizontalStackLayout>
                                                        <BoxView Color="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}" HeightRequest="2"/>
                                                    </VerticalStackLayout>
                                                </customView:SfEffectsViewAdv>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </VerticalStackLayout>
                                </Grid>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
            <Grid Margin="0,16,0,0" x:Name="UpdatedSortCollection" BackgroundColor="Transparent" IsVisible="False">
                    <BoxView  CornerRadius="20" Color="{AppThemeBinding Light={StaticResource TileBackgroundLight}, Dark={StaticResource TileBackgroundDark}}" VerticalOptions="Fill"/>
                <CollectionView x:DataType="base:SamplesViewModel"  ItemsSource="{Binding UpdatedSortedList}" Margin="10" BackgroundColor="Transparent">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="base:ControlModel">

                            <customView:SfEffectsViewAdv TouchDownEffects="Ripple">
                                    <customView:SfEffectsViewAdv.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Control_Tapped"/>
                                    </customView:SfEffectsViewAdv.GestureRecognizers>
                                    <Grid>
                                            <Grid Padding="16" ColumnSpacing="16" ColumnDefinitions="56,*" BackgroundColor="{AppThemeBinding Light={StaticResource TileBackgroundLight}, Dark={StaticResource TileBackgroundDark}}" >
                                            <Image Source="{Binding Image}" HeightRequest="56" WidthRequest="56"/>
                                            <VerticalStackLayout   Grid.Column="1" HorizontalOptions="Fill" VerticalOptions="Center">
                                                <HorizontalStackLayout Spacing="5">
                                                    <Label FontFamily="Roboto-Medium" Text="{Binding Title}" TextColor="{AppThemeBinding Light={StaticResource TitleTextColorLight}, Dark={StaticResource TitleTextColorDark}}" FontSize="16"/>
                                                        <Label FontFamily="Roboto-Medium" Text="Preview" Padding="3,1" IsVisible="{Binding IsPreview}" BackgroundColor="{AppThemeBinding Light={StaticResource BadgeColour1Light}, Dark={StaticResource BadgeColour1Dark}}" TextColor="{AppThemeBinding Light={StaticResource BadgeTextColourLight}, Dark={StaticResource BadgeTextColourDark}}" FontSize="10" Margin="0,0,0,2" VerticalTextAlignment="Center"/>
                                                </HorizontalStackLayout>
                                                <Grid>
                                                    <Label FontFamily="Roboto-Regular" 
                                                                                       VerticalOptions="Center"
                                                                                       Text="{Binding Description}"
                                                                                       TextColor="{AppThemeBinding Light={StaticResource TileTextColourAlt1Light}, Dark={StaticResource TileTextColourAlt1Dark}}" 
                                                                                       FontSize="14"
                                                                                       MaxLines="3" 
                                                                                       LineBreakMode="WordWrap"/>
                                                </Grid>
                                            </VerticalStackLayout>
                                        </Grid>
                                            <BoxView Grid.Row="1" VerticalOptions="End" HeightRequest="2" Color="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"/>
                                    </Grid>
                            </customView:SfEffectsViewAdv>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
                <Grid x:Name="sampleViewPage" Background="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}" IsVisible="False" >
